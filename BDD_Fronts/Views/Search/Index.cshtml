@{
    ViewData["Title"] = "商品キーワード検索";
}
@model BDD_Fronts.Models.Products.SearchViewModel
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="text-center"><h2>商品キーワード検索</h2></div>
            <form asp-action="SerarchButtonClick" method="post">
                <div class="row mb-3 d-flex justify-content-center">
                    <div class="col-sm-6">
                        <div class="text-center">
                            <input type="text" class="form-control" id="keyword" name="keyword" value="@Model.Keyword" placeholder="キーワード" />
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="text-center">
                        <button type="submit" name="action" value="End" class="btn btn-success">終了</button>
                        <button type="submit" name="action" value="Search" class="btn btn-primary">検索</button>
                    </div>
                </div>
                <div class="text-center">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
    <p>
        @if (Model.Products != null && Model.Products.Count > 0)
        {
            <table class="table">
                <thead className="table-success">
                    <tr>
                        <th scope="col">商品ID</th>
                        <th scope="col">商品名</th>
                        <th scope="col">単価</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td><a href="/exercise/product/update/Enter?id=@product.ProductId}">@product.ProductName</a></td>
                            <td>@product.ProductPrice</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </p>
</div>
