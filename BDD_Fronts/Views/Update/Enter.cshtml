@{
    ViewData["Title"] = "商品変更";
}
@model BDD_Fronts.Models.Products.ProductViewModel
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div align="center"><h2>商品変更</h2></div>
            <form asp-action="EnterButtonClick" method="post">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="row mb-3">
                    <div class="col-sm-4"><label for="ProductId" class="col-form-label">商品ID:</label></div>
                    <div class="col-sm-8"><input type="text" class="form-control" id="ProductId" name="ProductId" value="@Model.ProductId" readonly></div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4"><label for="ProductName" class="col-form-label">商品名:</label></div>
                    <div class="col-sm-8"><input type="text" class="form-control" id="ProductName" name="ProductName" placeholder="商品名を入力" value="@Model.ProductName"></div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4"><label for="ProductPrice" class="col-form-label">単価:</label></div>
                    <div class="col-sm-8"><input type="number" class="form-control" id="ProductPrice" name="ProductPrice" placeholder="単価を入力" value="@Model.ProductPrice"></div>
                </div>
                <div class="row mb-3">
                    <div class="text-center">
                        <button type="submit" name="action" value="End" class="btn btn-success">終了</button>
                        <button type="submit" name="action" value="Update" class="btn btn-primary">変更</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

