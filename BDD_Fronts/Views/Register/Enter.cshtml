@{
    ViewData["Title"] = "商品登録";
}
@model BDD_Fronts.Models.Products.RegisterViewModel
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div align="center"><h2>商品登録</h2></div>
            <form asp-action="EnterButtonClick" method="post">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="row mb-3">
                    <div class="col-sm-4"><label for="ProductName" class="col-form-label">商品名:</label></div>
                    <div class="col-sm-8"><input type="text" class="form-control" id="ProductName" name="ProductName" placeholder="商品名を入力" value="@Model.ProductName"></div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4"><label for="ProductPrice" class="col-form-label">単価:</label></div>
                    <div class="col-sm-8"><input type="number" class="form-control" id="ProductPrice" name="ProductPrice" placeholder="単価を入力" value="@Model.ProductPrice"></div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4"><label for="CategoryId" class="col-form-label">カテゴリ:</label></div>
                    <div class="col-sm-8">
                        <select class="form-select" id="CategoryId" name="CategoryId">
                            <option value="" selected disabled>カテゴリを選択</option>
                            @foreach (var category in Model.Categories!)
                            {
                                @if (Model.CategoryId != null
                               && category.CategoryId!.Equals(Model.CategoryId))
                                {
                                    <option value="@category.CategoryId" selected>@category.CategoryName</option>
                                }
                                else
                                {
                                    <option value="@category.CategoryId">@category.CategoryName</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="text-center">
                        <button type="submit" name="action" value="End" class="btn btn-success">終了</button>
                        <button type="submit" name="action" value="Register" class="btn btn-primary">登録</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
